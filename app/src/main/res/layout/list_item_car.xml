<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAppearance="?attr/textAppearanceHeadline1"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Car" />

    <TextView
        android:id="@+id/textview_car_model_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/textview_car"
        app:layout_constraintStart_toEndOf="@id/textview_car"
        tools:text="Car Model Year" />

    <TextView
        android:id="@+id/textview_car_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_car"
        tools:text="Car Model" />

    <TextView
        android:id="@+id/textview_car_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/textview_car_model"
        app:layout_constraintStart_toEndOf="@id/textview_car_model"
        tools:text="Car Color" />

    <TextView
        android:id="@+id/textview_car_vin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_car_model"
        tools:text="Car Vin" />

    <TextView
        android:id="@+id/textview_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAppearance="?attr/textAppearanceDisplayMedium"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/textview_car_vin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textview_car"
        tools:text="Price" />
</androidx.constraintlayout.widget.ConstraintLayout>